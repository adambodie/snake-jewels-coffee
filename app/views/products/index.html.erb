<%= render "welcome/adsHorizontal"%>
<div class="all_products"> 
<table border="0" cellspacing="0">
<tr>
  <th></th>			
  <th><%= sort_link(@q, :title) %></th>
  <th><%= sort_link(@q, :category) %></th>
  <th><%= sort_link(@q, "Price")%></th>
  <th>Available</th>
</tr>	            
  <% @products.each do |product| %>

    <tr>
      <td><%= image_tag product.picture.url(:thumb) %></td>	
      <td><%= link_to product.title, product_path(product) %></td>
      <td><%=product.category %></td>
      <td>$<%=product.price.round(2)%></td>
      <td><%=image_tag("check.gif")%></td>
  <!--    <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
    </tr>
  <% end %>
</table>
<div class="digg_pagination">
	<%= will_paginate @products, :page_links => false %>
</div>
</div>
