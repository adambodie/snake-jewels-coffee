<div class ="form">
<%= form_for(@item, :html => {:multipart => true}) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, autocomplete: 'off' %>
  </p>
  <p>
    <%= f.label :size %><br>
    <%= f.text_field :size, autocomplete: 'off' %>
  </p> 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: 50, rows: 20, autocomplete: 'off' %>
  </p>
  <p>
  	<%= f.label :price %></br>
  	<%= f.text_field :price, autocomplete: 'off' %>
  </p>
  
  <p>
  	<%= f.label :picture %></br>
  	<%= f.file_field :picture %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
