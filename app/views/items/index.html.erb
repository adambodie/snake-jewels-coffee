<h3>Listing items</h3>
<%= link_to 'New item', new_item_path %> 
<div class="all_items"> 
<table>
  <tr>
    <th>Title</th>
    <th>Size</th>
    <th>Description</th>
    <th>Price</th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.size %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>