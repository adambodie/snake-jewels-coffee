<%= link_to 'New item', new_item_path %> 
<div class="all_items"> 
<table>

  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.picture.url(:thumb) %></td>	
      <td><%= item.title %></td>
      <td><%= item.price %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
</div>
