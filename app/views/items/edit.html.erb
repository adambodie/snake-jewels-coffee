<h1>Editing Item</h1>
 
<%= form_for :item, url: item_path(@item), method: :patch do |f| %>
	<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  	</p>
  <p>
    <%= f.label :size %><br>
    <%= f.text_field :size %>
  </p> 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
  	<%= f.label :price %></br>
  	<%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', items_path %>